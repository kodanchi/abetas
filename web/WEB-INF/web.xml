<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <resource-ref>
        <description>DB Connection</description>
        <res-ref-name>jdbc/abetasDB</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>

    <listener>
        <listener-class>Listeners.ContextListener</listener-class>
    </listener>





    <filter>
        <filter-name>AuthFilters</filter-name>
        <filter-class>filters.AuthFilter</filter-class>
        <init-param>
            <param-name>avoid-urls</param-name>
            <param-value>css,js,fonts,login.jsp,img,login,Reset,Passcode,passReset,setup,install</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>AuthFilters</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>


    <filter>
        <filter-name>LoginFilters</filter-name>
        <filter-class>filters.LoginFilter</filter-class>

    </filter>
    <filter-mapping>
        <filter-name>LoginFilters</filter-name>
        <url-pattern>/login.jsp</url-pattern>
    </filter-mapping>



    <filter>
        <filter-name>LevelFilter</filter-name>
        <filter-class>filters.UserLevelFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>LevelFilter</filter-name>
        <url-pattern>/index.jsp</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>SUFilter</filter-name>
        <filter-class>filters.SuperuserLevelFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>SUFilter</filter-name>
        <url-pattern>/cycle/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>SUFilter</filter-name>
        <url-pattern>/program/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>SUFilter</filter-name>
        <url-pattern>/users/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>SUFilter</filter-name>
        <url-pattern>/form/unlockform.jsp</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>SUFilter</filter-name>
        <url-pattern>/form/unsubmittedForm.jsp</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>SUFilter</filter-name>
        <url-pattern>/backup.jsp</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>SUFilter</filter-name>
        <url-pattern>/unlock/*</url-pattern>
    </filter-mapping>


    <filter>
        <filter-name>FacultyFilter</filter-name>
        <filter-class>filters.FacultyLevelFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>FacultyFilter</filter-name>
        <url-pattern>/form/*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>SetupFilter</filter-name>
        <filter-class>filters.SetupFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>SetupFilter</filter-name>
        <url-pattern>/setup</url-pattern>
    </filter-mapping>


    <session-config>
        <session-timeout>525600</session-timeout>
        <cookie-config>
            <max-age>31536000</max-age>
        </cookie-config>
    </session-config>
    <error-page>
        <error-code>401</error-code>
        <location>/WEB-INF/error.jsp</location>
    </error-page>
    <error-page>
        <error-code>403</error-code>
        <location>/WEB-INF/error.jsp</location>
    </error-page>
    <error-page>
        <error-code>404</error-code>
        <location>/WEB-INF/error.jsp</location>
    </error-page>
    <error-page>
        <error-code>500</error-code>
        <location>/WEB-INF/error.jsp</location>
    </error-page>
</web-app>
